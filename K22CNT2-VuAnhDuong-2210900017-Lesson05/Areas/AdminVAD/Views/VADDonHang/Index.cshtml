@model IEnumerable<K22CNT2_VuAnhDuong_2210900017_.Models.DON_HANG>

@{
    ViewBag.Title = "Thông tin đơn hàng";
    Layout = "~/Areas/AdminVAD/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f7f7f7; /* Nền màu xám nhạt cho toàn bộ trang */
    }

    .card {
        background-color: #ffffff; /* Nền trắng cho các thẻ card */
        margin-bottom: 20px; /* Khoảng cách giữa các thẻ card */
    }

    .card-header {
        background-color: #343a40; /* Màu nền tối cho header của card */
        color: #ffffff; /* Màu chữ trắng */
        font-weight: bold;
    }

    .badge {
        font-size: 0.9em;
        padding: 0.5em;
        border-radius: 3px;
    }

    .btn-sm {
        font-size: 0.8em; /* Kích thước nút nhỏ hơn */
        padding: 0.2em 0.4em;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>

<h2>Quản lý đơn hàng</h2>
<hr />

<div class="container">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
                <span>Mã đơn hàng: @Html.DisplayFor(modelItem => item.MaDH)</span>
            </div>
            <div class="card-body">
                <p><strong>Ngày đặt:</strong> @Html.DisplayFor(modelItem => item.Ngay_dat)</p>
                <p><strong>Tên khách hàng:</strong> @Html.DisplayFor(modelItem => item.Ten_KH)</p>
                <p><strong>SDT:</strong> @Html.DisplayFor(modelItem => item.SDT)</p>
                <p><strong>Địa chỉ:</strong> @Html.DisplayFor(modelItem => item.Dia_chi)</p>
                <p><strong>Email:</strong> @Html.DisplayFor(modelItem => item.Email)</p>

                <p>
                    <strong>Trạng thái:</strong>
                    @{
                        if (item.TrangThai == 0)
                        {
                            <span class="badge bg-danger">Chờ xử lý</span>
                        }
                        else if (item.TrangThai == 1)
                        {
                            <span class="badge bg-info">Đang xử lý</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Đã hoàn thành</span>
                        }
                    }
                </p>

                <p>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaDH }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaDH }, new { @class = "btn btn-danger btn-sm" })
                </p>
            </div>
        </div>
    }
</div>
