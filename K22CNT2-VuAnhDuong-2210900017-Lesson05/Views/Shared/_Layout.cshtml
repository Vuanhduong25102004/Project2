    @{ 
        var dangNhap = Session["DangNhap"] as K22CNT2_VuAnhDuong_2210900017_.Models.KHACH_HANG;
    }
<!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <link href="~/Content/Style.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container">
                <img src="~/Content/images/logo.png" style="width:60px;height:60px" class="me-3" />
                @Html.ActionLink("FastFood Express", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("San pham", "Index", "SanPham", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Gio hang", "Index", "Cart", new { area = "" }, new { @class = "nav-link" })</li>

                        <li class="ms-auto">
                            @if (Session["IsAdmin"] == null || !(bool)Session["IsAdmin"])
                            {
                                <a href="@Url.Action("Login", "Account", new { area = "AdminVAD" })" class="nav-link">Đăng nhập Admin</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Index", "VADDashboard", new { area = "AdminVAD" })" class="nav-link">Trang quản trị</a>

 
                            }
                            </li>

                        </ul>
                </div>
                <div class="d-flex mx-2">
                    @if (Session["DangNhap"] != null)
                    {
                        <a href="#" class="mx-1">
                            <span class="badge bg-success">@dangNhap.Ten_KH</span>
                        </a>
                        <a href="/VADKhachHang/dang_xuat" ><span class="badge bg-primary">Đăng xuất</span></a>
                    }
                    else
                    {
                        <a href="/VADKhachHang/dang_nhap" class="btn btn-success mx-1">Đăng nhập</a>
                        <a href="/VADKhachHang/dang_ky" class="btn btn-primary">Đăng ký</a>
                    }

                </div>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.ToString("dd/MM/yyyy")  - Vũ Anh Dương</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
    </html>
