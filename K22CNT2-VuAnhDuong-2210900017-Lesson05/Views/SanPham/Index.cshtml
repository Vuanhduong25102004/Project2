@model IEnumerable<K22CNT2_VuAnhDuong_2210900017_.Models.SAN_PHAM>

@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<h2 class="text-center">Danh sách sản phẩm</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@Url.Content("~/Content/images/AnhSP/" + item.Image)" class="card-img-top" alt="Product Image" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title text-center">@item.TenSP</h5>
                        <p class="card-text">
                            <strong>Giá:</strong> @item.Gia VNĐ<br>
                            <strong>Số lượng:</strong> @item.Soluong<br>
                            <strong>Mô tả:</strong> @item.Mota
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Action("AddToCart", "Cart", new { id = item.MaSP, name = item.TenSP, image = item.Image, price = item.Gia })" class="btn btn-success w-100">Mua</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
