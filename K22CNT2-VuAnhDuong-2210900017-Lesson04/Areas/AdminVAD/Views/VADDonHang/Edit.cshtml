@model K22CNT2_VuAnhDuong_2210900017_.Models.DON_HANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AdminVAD/Views/Shared/_Layout.cshtml";
    List<K22CNT2_VuAnhDuong_2210900017_.ModelViews.DH_Chitiet> chitiet = ViewBag.donhangChiTiet as List<K22CNT2_VuAnhDuong_2210900017_.ModelViews.DH_Chitiet>;
}

<h2>Thông tin đơn hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.HiddenFor(model => model.MaDH)

    <div class="form-group">
        <div class="col-md-10">
            <label class="control-label col-md-2">Mã đơn hàng: </label>
            <span>@Model.MaDH</span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label class="control-label col-md-2">Ngày đặt:</label>
            <span>@Model.Ngay_dat</span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label class="control-label col-md-2">Mã khách hàng:</label>
            <span>@Model.MaKH</span>
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            <label class="control-label col-md-2">Tên khách hàng:</label>
            <span>@Model.Ten_KH</span>
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            <label class="control-label col-md-2">Số điện thoại:</label>
            <span>@Model.SDT</span>
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            <label class="control-label col-md-2">Địa chỉ:</label>
            <span>@Model.Dia_chi</span>
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            <label class="control-label col-md-2">Email:</label>
            <span>@Model.Email</span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Trạng thái hóa đơn</label>
        <div class="col-md-10">
            <select class="form-control" name="TrangThai">
                <option value="0" @{if (Model.TrangThai == 0) { <text> selected</text>; } }>Chờ xử lý</option>

                <option value="1" @{if (Model.TrangThai == 1) { <text> selected</text>; } }>Đang xử lý</option>

                <option value="2" @{if (Model.TrangThai == 2) { <text> selected</text>; } }>Đã hoàn thành</option>

            </select>

        </div>

    </div>


    <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success mt-1" />
            </div>
        </div>
    </div>
    }

<h2>Chi tiết đơn hàng đặt mua</h2>
<table class="table">
    <tr>
        <th>Mã sản phẩm</th>
        <th>Hình ảnh</th>
        <th>Sản phẩm</th>
        <th>Đơn giá</th>
        <th>Số lượng</th>
        <th>Thành tiền</th>
    </tr>
    @foreach (var item in chitiet)
    {
        <tr>
            <td>@item.Id</td>
            <td><img src="@Url.Content("~/Content/images/AnhSP/" + item.Image)" alt="Product Image" width="60" height="60" /></td>
            <td>@item.Name</td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Qty
            </td>
            <td>@item.Total

        </tr>
    }
</table>
<div>
    @Html.ActionLink("Back to List", "Index", null , new {@class = "btn btn-primary"})
</div>
